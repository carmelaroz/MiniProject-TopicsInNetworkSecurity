{
    "name": "Email Link Scanner",
    "version": "1.0.0",
    "description": "this is an extenstion to detect mallicious links in gmail",
    "manifest_version": 3,
    "author": "Carmela Rozhinski & Matan Bohadana",
    "permissions": [
    "activeTab",
    "scripting",
    "webNavigation"
    ],
      "background": {
        "service_worker": "background.js"
      },
      "content_scripts": [
        {
          "matches": ["https://mail.google.com/*"],
          "js": ["content.js"],
          "run_at": "document_end"
        }
      ],
      "host_permissions": [
        "https://mail.google.com/*"
      ],
      "action": {
        "default_popup": "index.html",
        "default_title": "Email Link Scanner"
      }
}   